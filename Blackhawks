-- Oyuncuyu ve GUI servisini tanımla
local Players = game:GetService("Players")
local Player = Players.LocalPlayer

-- Oyuncu katıldığında PlayerGui'nin yüklenmesini bekle
local PlayerGui = Player:WaitForChild("PlayerGui")

-- 1. Siyah Ekran GUI'sini Oluştur
local blackScreenGui = Instance.new("ScreenGui")
blackScreenGui.Name = "BlackScreenGui"
blackScreenGui.IgnoreGuiInset = true -- Tam ekran kaplaması için
blackScreenGui.ResetOnSpawn = false -- Yeniden doğuşta sıfırlanmasın

-- Siyah arka plan için bir Frame oluştur
local blackFrame = Instance.new("Frame")
blackFrame.Name = "BlackFrame"
blackFrame.Size = UDim2.new(1, 0, 1, 0) -- Ekranın tamamını kapla
blackFrame.BackgroundColor3 = Color3.new(0, 0, 0) -- Siyah
blackFrame.BackgroundTransparency = 1 -- Başlangıçta görünmez (fade-in için)
blackFrame.BorderSizePixel = 0

-- GUI'ye metin ekle
local messageText = Instance.new("TextLabel")
messageText.Name = "MessageText"
messageText.Size = UDim2.new(1, 0, 0.2, 0) -- Ekranın üst kısmında
messageText.Position = UDim2.new(0, 0, 0.4, 0) -- Ortalanmış
messageText.BackgroundTransparency = 1 -- Şeffaf arka plan
messageText.Text = "This script is currently being updated. Please join our Discord server and let the developers know."
messageText.TextColor3 = Color3.new(1, 1, 1) -- Beyaz yazı
messageText.TextScaled = true -- Ekrana uyumlu yazı boyutu
messageText.Font = Enum.Font.GothamBold
messageText.TextTransparency = 1 -- Başlangıçta görünmez (fade-in için)

-- Discord bağlantısı için ikinci bir metin
local discordLink = Instance.new("TextButton") -- Tıklanabilir bağlantı
discordLink.Name = "DiscordLink"
discordLink.Size = UDim2.new(0.5, 0, 0.1, 0)
discordLink.Position = UDim2.new(0.25, 0, 0.65, 0) -- Ana mesajın altında
discordLink.BackgroundColor3 = Color3.new(0.2, 0.4, 0.8) -- Discord mavisi
discordLink.BackgroundTransparency = 1 -- Başlangıçta görünmez
discordLink.Text = "discord.gg/femware"
discordLink.TextColor3 = Color3.new(1, 1, 1)
discordLink.TextScaled = true
discordLink.Font = Enum.Font.GothamBold
discordLink.TextTransparency = 1 -- Başlangıçta görünmez

-- Kullanıcı tıkladığında bağlantıyı aç
discordLink.MouseButton1Click:Connect(function()
    -- Discord sunucunuzun davet bağlantısını buraya ekleyin
    local discordInvite = "discord.gg/femware"
    pcall(function() -- Hata yakalama
        game:GetService("StarterGui"):SetCore("OpenBrowserWindow", {
            URL = discordInvite
        })
    end)
end)

-- Parçaları birleştir
discordLink.Parent = blackFrame
messageText.Parent = blackFrame
blackFrame.Parent = blackScreenGui
blackScreenGui.Parent = PlayerGui

-- 2. Fade-In (Yavaşça Görünür Olma) Efekti
local TweenService = game:GetService("TweenService")

-- Siyah ekranın yavaşça görünür olması için Tween
local fadeInInfo = TweenInfo.new(
    2, -- Süre (saniye)
    Enum.EasingStyle.Linear,
    Enum.EasingDirection.In,
    0, -- Tekrar sayısı
    false, -- Geri sarma
    0 -- Gecikme
)

-- Siyah ekran için fade-in
local fadeInTween = TweenService:Create(blackFrame, fadeInInfo, {BackgroundTransparency = 0})
-- Metinler için fade-in
local textFadeInTween = TweenService:Create(messageText, fadeInInfo, {TextTransparency = 0})
local linkFadeInTween = TweenService:Create(discordLink, fadeInInfo, {BackgroundTransparency = 0, TextTransparency = 0})

-- 3. Script Çalıştırıldığında Fade-In Başlat
-- Kısa bir gecikmeyle başlat (GUI'nin yüklenmesi için)
task.wait(0.5)
fadeInTween:Play()
textFadeInTween:Play()
linkFadeInTween:Play()

-- (Opsiyonel) Belirli bir süre sonra ekranı temizlemek isterseniz:
-- Örneğin, 10 saniye sonra ekranı kaldırmak için:
-- task.wait(10)
